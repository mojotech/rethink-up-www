@import '_settings'

base()
establish-baseline('normalize')

text-selection(blue)

*
*:before
*:after
input
  box-sizing: border-box

header
section
footer
  width: 800px
  margin: 0 auto
  padding: 0 80px

h1
  font-family: droid-serif

h1
h2
h3
  font-weight: normal

a
  link()

.bleed
  height: 100px
  background-color: light-grey


header
  h1
    margin-left: -3px

  &:before
    size: 38 32
    content: ''
    background-image: url('../img/rethink-up-logo.png')
    background-size: 38px 32px
    position: absolute
    margin-top: 8px
    margin-left: -55px
    transition-property: transform
    transition-duration: 500ms

  &:hover:before
    transform: translate(0, -5px)

.footer
  width: 100%
  position: absolute
  left: 0
  bottom: 0

footer
  line-height: 100px
  font-style: italic
  color: gray

  &:before
    size: 46 40
    content: ''
    background-image: url('../img/mojotech-hex-logo.png')
    background-size: 46px 40px
    position: absolute
    margin-top: 32px
    margin-left: -60px
    transition-property: transform
    transition-duration: 500ms

  &:hover:before
    transform: rotate(360deg)

section.signup
  font-size: 1.17em
  line-height: 100px

  .fields
    position: relative

  input:valid + label,
  input:focus + label
    margin-left: -68px
    color: dark-grey

  label
    color grey
    position: absolute
    top: 0
    left: 0
    margin-left: 10px
    transition-property: color
    transition-property: margin-left
    transition-duration: 200ms

  .email
    size: 472 47
    outline: none
    font-size: 1em
    border: 2px solid grey
    border-radius: 3px
    box-sizing: border-box
    margin-right: 20px
    padding-left: 12px

  .button
    size: 300 46
    background-color: red
    border-radius: 3px
    outline: 0
    border: 0
    font-size: 1em
    font-weight: 400
    color: white
    transition-property: background-color
    transition-duration: 200ms


    &:hover
      background-color: dark-red
